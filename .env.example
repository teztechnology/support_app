# Stytch B2B Configuration
STYTCH_BUSINESS_PROJECT_ID=project-test-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
STYTCH_BUSINESS_SECRET=secret-test-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_STYTCH_BUSINESS_ORG_ID=organization-test-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Legacy Stytch (fallback)
STYTCH_PROJECT_ID=project-test-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
STYTCH_SECRET=secret-test-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Azure Cosmos DB Configuration
AZURE_COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your-cosmos-db-primary-key
AZURE_COSMOS_DATABASE_ID=support-app

# Azure Storage (for file uploads)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccount;AccountKey=yourkey;EndpointSuffix=core.windows.net

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your-very-secure-session-secret-key-here

# Cookie Configuration
# For localhost development, leave COOKIE_DOMAIN empty or set to localhost
COOKIE_DOMAIN=localhost

# For Vercel deployment:
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
# COOKIE_DOMAIN=.vercel.app (note the leading dot for subdomain support)